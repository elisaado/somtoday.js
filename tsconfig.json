{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["ES2020", "es2017", "es7", "es6"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "dist"]
}
